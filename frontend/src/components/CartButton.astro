<button id="openCart">
  <slot />
</button>

<script>
  import { $isCartOpen } from '../store/cart';


  function openCart() {

    console.log('click', $isCartOpen.get());

    $isCartOpen.set(!$isCartOpen.get());
  }

  // Add an event listener to the button
  document.getElementById('openCart').addEventListener('click', openCart);
</script>
